    "components": {
        "schemas": {
            "GetProducts": {
                "type": "object",
                "properties": {
                    "products": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": "string",
                                    "example": "53b40f81-1d81-41dd-bb66-e7f5436765ba"
                                },
                                "name": {
                                    "type": "string",
                                    "example": "TV"
                                },
                                "price": {
                                    "type": "number",
                                    "example": 2500.0
                                }
                            }
                        }
                    }
                }
            },
            "GetProduct": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "example": "53b40f81-1d81-41dd-bb66-e7f5436765ba"
                    },
                    "name": {
                        "type": "string",
                        "example": "TV"
                    },
                    "price": {
                        "type": "number",
                        "example": 2500.0
                    },
                    "description": {
                        "type": "string",
                        "example": "a 50Â¨ TV with 4k quality"
                    }
                }
            },
            "PostProduct": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "Notebook"
                    },
                    "price": {
                        "type": "number",
                        "example": 3500.0
                    },
                    "description": {
                        "type": "string",
                        "example": "An Notebook with ryzen 5 5500U and 16GB RAM."
                    }
                },
                "required": [
                    "name",
                    "price"
                ]
            },
            "PutProduct": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "Smartphone"
                    },
                    "price": {
                        "type": "number",
                        "example": 1800.0
                    },
                    "description": {
                        "type": "string",
                        "example": "An Smartphone with Android 13"
                    }
                }
            },
            "AuthUser": {
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string",
                        "example": "user_name"
                    },
                    "password": {
                        "type": "string",
                        "example": "senha@123"
                    }
                },
                "required": [
                    "username",
                    "password"
                ]
            },
            "GetUser": {
                "type": "object",
                "properties": {
                    "user": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "string",
                                "example": "bc781b4a-72f3-4214-b28c-7872fcc6c70f"
                            },
                            "username": {
                                "type": "string",
                                "example": "user_name"
                            },
                            "created_at": {
                                "type": "string",
                                "example": "Mon, 22 Jan 2024 12:23:17 GMT"
                            },
                            "items_purchased": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "string",
                                            "example": "53b40f81-1d81-41dd-bb66-e7f5436765ba"
                                        },
                                        "name": {
                                            "type": "string",
                                            "example": "TV"
                                        },
                                        "price": {
                                            "type": "number",
                                            "example": 2500
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "GetCartItems": {
                "type": "object",
                "properties": {
                    "cart_items": {
                        "type": "array",
